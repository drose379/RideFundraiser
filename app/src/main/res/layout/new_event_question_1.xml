<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:customText="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/questionLayout1"
        >

        <drose379.ridefundraiser.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            customText:bold="true"
            android:textSize="17sp"
            android:text="What Am I Doing?"
            android:id="@+id/question1Label"
            />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/question1Label"
            android:completionThreshold="1"
            android:hint="Walking"
            android:textSize="15sp"
            android:id="@+id/question1EditText"/>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/measureSelection"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question1EditText"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/mile"
                android:text="By The Mile"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hour"
                android:text="By The Hour"/>

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/measureSelection"
            android:background="@color/indicator"
            android:textColor="#FFFFFF"
            android:id="@+id/nextButton1"
            android:text="Next"/>


</RelativeLayout>



